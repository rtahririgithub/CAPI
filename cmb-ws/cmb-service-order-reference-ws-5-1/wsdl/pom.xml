<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>telus.cust.cmb.ws.service.order.reference</groupId>
		<artifactId>pom-cmb-service-order-reference-ws</artifactId>
		<version>5.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>cmb-service-order-reference-wsdl</artifactId>

	<properties>
		<genwsdl.service.definition>ServiceOrderReferenceServiceDefinition_v5_1.xml</genwsdl.service.definition>
		<genwsdl.local.wsdl.file>ServiceOrderReferenceService_v5_1.wsdl</genwsdl.local.wsdl.file>
		<genwsdl.xmlToWsdl.xslt>http://xmlschema.tmi.telus.com/xsd/common/utils/xmlToWsdl/xmlToWsdl_v3_2.xslt</genwsdl.xmlToWsdl.xslt>
		<genwsdl.local.binding.schemalocation>binding_schema.xjb</genwsdl.local.binding.schemalocation>
		<genwsdl.include.userpassword.for.basic.auth>False</genwsdl.include.userpassword.for.basic.auth>
		<genwsdl.http.xsd.file>http://xmlschema.tmi.telus.com/srv/SMO/OrderMgmt/ServiceOrderReferenceServiceRequestResponse_v5_1.xsd</genwsdl.http.xsd.file>
		<genwsdl.local.xsd.file>ServiceOrderReferenceServiceRequestResponse_v5_1.xsd</genwsdl.local.xsd.file>
	</properties>

	<profiles>
		<profile>
			<id>BuildServer</id>
			<properties>
				<genwsdl.include.userpassword.for.basic.auth>True</genwsdl.include.userpassword.for.basic.auth>
			</properties>
		</profile>
		<profile>
			<id>Eclipse</id>
			<properties>
				<genwsdl.substitute.schemaLocation>False</genwsdl.substitute.schemaLocation>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.code.maven-replacer-plugin</groupId>
						<artifactId>replacer</artifactId>
						<version>${telus.replacer-plugin.version}</version>
						<executions>
							<execution>
								<id>substitute-schema-location</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>replace</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>org.jvnet.jaxb2_commons</groupId>
			<artifactId>jaxb2-basics-runtime</artifactId>
		</dependency>
		<dependency>
			<groupId>telus-maven.plugins-support</groupId>
			<artifactId>telus-core</artifactId>
		</dependency>
		<dependency>
			<groupId>telus.cust.cmb.common</groupId>
			<artifactId>cmb-common-xmlbind</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<verbose>${clean.verbose}</verbose>
					<failOnError>false</failOnError>
					<filesets>
						<fileset>
							<directory>${basedir}/src/main/generated-sources</directory>
							<directory>${basedir}/src/main/impl</directory>
						</fileset>
						<fileset>
							<directory>${basedir}/src/main/resources/wsdls</directory>
							<includes>
								<include>${genwsdl.local.wsdl.file}</include>
								<include>*SOA_LM_Bindings.wsdl</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>GenWsdl</id>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>${telus.replacer-plugin.version}</version>
				<executions>
					<execution>
						<id>substitute-schema-location</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<ignoreMissingFile>false</ignoreMissingFile>
					<preserveDir>false</preserveDir>
					<quiet>false</quiet>
					<basedir>${basedir}</basedir>
					<includes>
						<include>src/main/resources/wsdls/*.wsdl</include>
						<include>src/main/resources/wsdls/${genwsdl.local.binding.schemalocation}</include>
						<include>src/main/resources/wsdls/${genwsdl.service.definition}</include>
					</includes>
					<outputDir>target/classes/wsdls</outputDir>
					<replacements>
						<replacement>
							<token>${genwsdl.local.xsd.file}</token>
							<value>${genwsdl.http.xsd.file}</value>
						</replacement>
					</replacements>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.jvnet.jax-ws-commons</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>

				<executions>
					<execution>
						<id>GenService</id>
						<configuration>
							<verbose>true</verbose>
							<target>2.1</target>
							<bindingFiles>
								<bindingFile>binding_wsdl.xjb</bindingFile>
								<bindingFile>${genwsdl.local.binding.schemalocation}</bindingFile>
							</bindingFiles>
							<wsdlFiles>
								<wsdlFile>${genwsdl.local.wsdl.file}</wsdlFile>
							</wsdlFiles>
							<wsdlLocation>classpath:wsdls/${genwsdl.local.wsdl.file}</wsdlLocation>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>
</project>
